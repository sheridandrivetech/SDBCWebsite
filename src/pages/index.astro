---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'SDBC - A Christ Centered Church',
  ignoreTitleTemplate: false,
};
---

<Layout metadata={metadata}>
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Learn More About Us',
        href: 'https://google.com',
        target: '_blank',
        
      }
    ]}
    image={{ src: '~/assets/images/bible1.jpg', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      Sheridan Drive Baptist Church
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        We are a conservative Baptist church that firmly believes that the Bible alone is the inspired, inerrant, authoritative word of God. It is our desire and joy to see all people come to know Jesus as their Savior and follow Him faithfully. We hope you’ll take a few moments to look around our website where you’ll be able to see many of the ways you can get connected with SDBC. If you haven’t visited with us yet, we encourage you to stop by this Sunday and worship with us!</span
      >
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->


  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Bible', amount: '1' },
      { title: 'Books', amount: '66' },
      { title: 'Verses', amount: '31,102' }
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
    {
      variant: 'primary',
      text: 'Learn More About Us',
      href: 'https://google.com',
      target: '_blank',
      
    }
  ]}
  >
  </CallToAction>
</Layout>
